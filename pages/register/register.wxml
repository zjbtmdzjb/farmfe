<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">注册</view>
</cu-custom>
<block>
<form>
  <view class="cu-form-group margin-top">
		<view class="title">用户名</view>
		<input placeholder="请输入用户名"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">用户密码</view>
		<input placeholder="请输入用户密码" type='password'></input>
	</view>
  <view class="cu-form-group">
		<view class="title">牛场名</view>
		<input placeholder="请输入牛场名"></input>
	</view>
  <view class="cu-form-group">
		<view class="title">用户职级</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{profession}}">
			<view class="picker">
				{{index?profession[index]:'请选择身份'}}
			</view>
		</picker>
	</view>
  <view class='cu-form-group'>
    <view class='title'>姓名</view>
    <input placeholder='请输入姓名'></input>
  </view>
  <view class='cu-form-group'>
    <view class='title'>电话</view>
    <input placeholder='请输入电话'></input>
    <view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
  </view>
  <view class="cu-form-group">
		<view class="title">验证码</view>
		<input placeholder="输入验证码"></input>
		<button class="cu-btn bg-green shadow">获取验证码</button>
	</view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-gradual-blue lg">注册</button>
  </view>
</form>
</block>
